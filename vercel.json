
{
  "version": 2,
  "functions": {
    "api/send-payment-confirmation.js": {
      "runtime": "nodejs18.x"
    }
  },
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist"
}
